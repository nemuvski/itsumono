{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@itsumono/react": ["packages/react/src"],
      "@itsumono/utils": ["packages/utils/src"]
    }
  },
  "exclude": ["examples", "website"]
}
