{
  "name": "itsumono",
  "author": "K.Utsunomiya",
  "private": true,
  "packageManager": "pnpm@7.6.0",
  "engines": {
    "node": ">=16.13.0",
    "pnpm": ">=7.6",
    "npm": "forbidden, use pnpm",
    "yarn": "forbidden, use pnpm"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./packages",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx ./packages",
    "format": "prettier --check 'packages/**/*.{js,jsx,ts,tsx}'",
    "format:fix": "prettier --write 'packages/**/*.{js,jsx,ts,tsx}'",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "prebuild": "npm run typecheck && npm run lint && npm run format",
    "build": "turbo run build",
    "docs:clean": "rimraf ./docs",
    "docs:gen": "typedoc"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-regexp": "^1.7.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.0",
    "turbo": "^1.3.4",
    "typedoc": "^0.23.9",
    "typedoc-theme-hierarchy": "^3.0.0",
    "typescript": "^4.7.4"
  }
}
